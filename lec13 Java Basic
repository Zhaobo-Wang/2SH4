package lesson1;
import java.util.Scanner;

public class App {

	public static void main(String[] args) {
			
			int input = 0;
			int reverse = 0;
			Scanner sc = new Scanner(System.in);
		
			System.out.println("Please a number to reverse: ");
			
			input = sc.nextInt();
			
			while(input > 0) {
				
				reverse*=10;
				
				reverse += input%10;
				
				input/=10;
				
			}
			
			System.out.println("The reversed number is: "+reverse);
	}
	
}

